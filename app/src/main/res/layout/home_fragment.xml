<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.HomeFragment">

    <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_google_developer_groups"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/end_well"
            app:layout_constraintStart_toStartOf="@+id/start_well"/>

    <TextView
            android:id="@+id/intro_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@+id/start_well"
            app:layout_constraintEnd_toStartOf="@+id/end_well"
            android:text="@string/gdg_description_long"
            android:layout_marginTop="8dp"
    />
    <ImageView
            android:id="@+id/left_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/behind"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/intro_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_image"
            app:layout_constraintDimensionRatio="1:1" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>

    <ImageView
            android:id="@+id/center_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/session"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@id/left_image"
            app:layout_constraintStart_toEndOf="@id/left_image"
            app:layout_constraintEnd_toStartOf="@id/right_image"
            app:layout_constraintDimensionRatio="1:1"/>
    <ImageView
            android:id="@+id/right_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/wtm"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@id/left_image"
            app:layout_constraintStart_toEndOf="@id/center_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1" android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/gdgs_are"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/left_image"
            app:layout_constraintStart_toEndOf="@id/start_well"
            app:layout_constraintEnd_toStartOf="@id/end_well"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            android:text="@string/gdg_description_bullets"
            app:layout_constraintStart_toStartOf="@+id/start_well"
            app:layout_constraintEnd_toStartOf="@+id/end_well"
            android:layout_marginTop="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_well"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>